{
  "compilerOptions": {
    "target": "es2016",
    "module": "amd",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": false,
    "outFile": "./index.js",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "es2018"
    ]
  },
  "include": [
    "./src/*"
  ]
}
